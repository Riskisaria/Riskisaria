#include <iostream>
using namespace std;

int main() {
	int nomorbulan;
	int jumlahhari;
	int tahun;

	cout << "masukan nomor bulan : ";
	cin >> nomorbulan;
	cout << "masukan tahun : ";
	cin >> tahun;


	switch (nomorbulan) {
	case 1:
		jumlahhari = 31;
		break;
	case 2:
		if (tahun % 4==0 && tahun % 100 != 0) {
			jumlahhari = 29;
			cout << " tahun kabisat" << endl;
		}
		else {
			jumlahhari = 28;
		}
		break;
	case 3:
		jumlahhari = 31;
			break;
	case 4:
		jumlahhari = 30;
		break;
	case 5:
		jumlahhari = 31;
		break;
	case 6:
		jumlahhari = 30;
		break;
	case 7:
		jumlahhari = 31;
		break;
	case 8:
		jumlahhari = 31;
		break;
	case 9:
		jumlahhari = 30;
		break;
	case 10:
		jumlahhari = 31;
		break;
	case 11:
		jumlahhari = 30;
		break;
	case 12:
		jumlahhari = 31;
		break;
	}
	cout << "jumlah hari adalah : " << jumlahhari;


		return 0;
}
